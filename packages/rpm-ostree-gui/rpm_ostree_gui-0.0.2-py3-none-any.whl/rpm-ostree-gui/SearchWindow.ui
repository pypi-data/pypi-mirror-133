<interface>
  <template class="SearchWindow" parent="GtkDialog">
    <property name='default-width'>500</property>
    <property name='default-height'>500</property>
    <property name="title">RPM OSTree GUI</property>
    <child>
      <object class="GtkBox">
        <property name="orientation">GTK_ORIENTATION_VERTICAL</property>
        <child>
          <object class="GtkEntry" id="search_entry"></object>
        </child>
        <child>
          <object class="GtkScrolledWindow" id="package_list">
            <property name="vexpand">True</property>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
