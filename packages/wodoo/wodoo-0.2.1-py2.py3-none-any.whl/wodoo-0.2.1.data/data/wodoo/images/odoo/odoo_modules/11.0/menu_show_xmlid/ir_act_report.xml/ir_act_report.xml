<?xml version="1.0"?>
<odoo>
  <data>
    <record id="view_ir_actions_report_form" model="ir.ui.view">
      <field name="name">add xmlid</field>
      <field name="model">ir.actions.report</field>
      <field name="inherit_id" ref="base.act_report_xml_view"/>
      <field name="type">form</field>
      <field name="arch" type="xml">
        <field name="name" position="after">
          <field name="xml_id"/>
        </field>
      </field>
    </record>
    <record id="view_ir_actions_report_tree" model="ir.ui.view">
      <field name="name">add xmlid</field>
      <field name="model">ir.actions.report</field>
      <field name="type">tree</field>
      <field name="inherit_id" ref="base.act_report_xml_view_tree"/>
      <field name="arch" type="xml">
        <field name="report_type" position="after">
          <field name="xml_id"/>
        </field>
      </field>
    </record>
  </data>
</odoo>
